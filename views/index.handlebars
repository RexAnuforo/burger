<div class="container">
  <div class="row" id="row1">
    <div class="col-md-12">
      <h1 class="mainTitle">Eat Da Burger!</h1>
        <img class="burger" src="https://images.unsplash.com/photo-1530554764233-e79e16c91d08?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1868&q=80"/>
    </div>
  </div>

  <div class="row" id="row2">
    <div class="col-md-8">
      <h2 class="title">Enjoy your meal!</h2>
        <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{burger_name}}
            {{> burgers/burger-block}}
          {{/unless}}
        {{/each}}
        </ul>
    </div>
    <div class="col-md-4">
      <h2 class="prevTitle">Orders</h2>
      <ul>
      {{#each burgers}}
        {{#if devoured}}
          <li>
          {{id}}
          {{burger_name}}
          </li>
        {{/if}}
      {{/each}}
      </ul>
    </div>
  </div>

  <div class="row" id="row3">
    <div class="col-md-12">
      <div class="orderBurger">
        <h2 class="title">Orders</h2>
        <form class="create-form">
          <div class="form-group">
            <label for="newBurger">Burger Name:</label>
            <input type="text" id="newBurger" name="burger">
          </div>
        <button type="submit" id="orderBtn">Order!</button>
        </form>
      </div>
    </div>
  </div>
</div>
